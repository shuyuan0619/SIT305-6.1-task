<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddOrderNextActivity">

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:text="Good type:"
        android:textColor="@color/black"
        android:textSize="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@+id/textView4"
        app:layout_constraintTop_toBottomOf="@+id/textView4">

        <RadioButton
            android:id="@+id/btn_fumiture"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fumiture"
            android:textSize="20dp"/>

        <RadioButton
            android:id="@+id/btn_dry_food"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dry food"
            android:textSize="20dp"/>

        <RadioButton
            android:id="@+id/btn_food"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="food"
            android:textSize="20dp"/>

        <RadioButton
            android:id="@+id/btn_building_material"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Building material"
            android:textSize="20dp"/>

        <RadioButton
            android:id="@+id/btn_other_good"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="other"
            android:textSize="20dp"/>
    </RadioGroup>

    <EditText
        android:id="@+id/editText2"
        android:layout_width="250dp"
        android:layout_height="30dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/edit_layout"
        android:paddingLeft="10dp"
        android:hint="other"
        android:textSize="24dp"
        app:layout_constraintStart_toStartOf="@+id/radioGroup"
        app:layout_constraintTop_toBottomOf="@+id/radioGroup" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Weight and dimension:"
        android:textColor="@color/black"
        android:textSize="30dp"
        app:layout_constraintStart_toStartOf="@+id/editText2"
        app:layout_constraintTop_toBottomOf="@+id/editText2" />

    <EditText
        android:id="@+id/edit_weight_add_next"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:background="@drawable/edit_layout"
        android:paddingLeft="10dp"
        android:hint="weight"
        app:layout_constraintStart_toStartOf="@+id/textView5"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <EditText
        android:id="@+id/edit_width_add_next"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:background="@drawable/edit_layout"
        android:paddingLeft="10dp"
        android:hint="width"
        app:layout_constraintEnd_toEndOf="@+id/textView5"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <EditText
        android:id="@+id/edit_length_add_next"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/edit_layout"
        android:paddingLeft="10dp"
        android:hint="length"
        app:layout_constraintStart_toStartOf="@+id/edit_weight_add_next"
        app:layout_constraintTop_toBottomOf="@+id/edit_weight_add_next" />

    <EditText
        android:id="@+id/edit_height_add_next"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/edit_layout"
        android:paddingLeft="10dp"
        android:hint="height"
        app:layout_constraintEnd_toEndOf="@+id/edit_width_add_next"
        app:layout_constraintTop_toBottomOf="@+id/edit_width_add_next" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Vehicle Type:"
        android:textColor="@color/black"
        android:textSize="30dp"
        app:layout_constraintStart_toStartOf="@+id/edit_length_add_next"
        app:layout_constraintTop_toBottomOf="@+id/edit_length_add_next" />


    <RadioGroup
        android:id="@+id/radioGroup2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@+id/textView6"
        app:layout_constraintTop_toBottomOf="@+id/textView6">

        <RadioButton
            android:id="@+id/btn_truck"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Truck"
            android:textSize="20dp" />

        <RadioButton
            android:id="@+id/btn_van"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Van"
            android:textSize="20dp" />

        <RadioButton
            android:id="@+id/btn_refrigerated_truck"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Refrigerated truck"
            android:textSize="20dp" />

        <RadioButton
            android:id="@+id/btn_mini_truck"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mini truck"
            android:textSize="20dp" />

        <RadioButton
            android:id="@+id/btn_other_vehicle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="other"
            android:textSize="20dp" />
    </RadioGroup>

    <EditText
        android:id="@+id/editText3"
        android:layout_width="250dp"
        android:layout_height="30dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/edit_layout"
        android:paddingLeft="10dp"
        android:hint="other"
        android:textSize="24dp"
        app:layout_constraintStart_toStartOf="@+id/radioGroup2"
        app:layout_constraintTop_toBottomOf="@+id/radioGroup2" />

    <Button
        android:id="@+id/btn_create_order"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/btn_layout"
        android:text="CREATE ORDER"
        android:textSize="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editText3" />
</androidx.constraintlayout.widget.ConstraintLayout>