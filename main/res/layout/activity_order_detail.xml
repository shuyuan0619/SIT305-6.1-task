<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".OrderDetailActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="128dp"
        android:layout_height="128dp"
        android:layout_marginTop="60dp"
        android:background="@drawable/pic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayout6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="left"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView">

        <TextView
            android:id="@+id/text_sender_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:text="From Sender: ????"
            android:textColor="@color/black"
            android:textSize="26dp" />

        <TextView
            android:id="@+id/pick_up_time_detail_TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:text="Pick up time : ????"
            android:textColor="@color/black"
            android:textSize="26dp" />

        <TextView
            android:id="@+id/receiver_detail_TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="30dp"
            android:text="To Receiver: ????"
            android:textColor="@color/black"
            android:textSize="26dp" />

        <TextView
            android:id="@+id/text_drop_off_time_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:text="Pick up time : 16:00 pm"
            android:textColor="@color/black"
            android:textSize="26dp" />
    </LinearLayout>

    <TextView
        android:id="@+id/textView7"
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="Good Description"
        android:textColor="@color/black"
        android:textSize="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout6" />

    <TextView
        android:id="@+id/text_weight"
        android:layout_width="170dp"
        android:layout_height="80dp"
        android:textSize="24dp"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp"
        android:background="@drawable/edit_layout"
        app:layout_constraintStart_toStartOf="@+id/textView7"
        app:layout_constraintTop_toBottomOf="@+id/textView7" />

    <TextView
        android:id="@+id/text_good_type"
        android:layout_width="170dp"
        android:layout_height="80dp"
        android:textSize="24dp"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp"
        android:background="@drawable/edit_layout"
        app:layout_constraintEnd_toEndOf="@+id/textView7"
        app:layout_constraintTop_toBottomOf="@+id/textView7" />

    <TextView
        android:id="@+id/text_width"
        android:layout_width="170dp"
        android:layout_height="80dp"
        android:layout_marginTop="5dp"
        android:textSize="24dp"
        android:gravity="center"
        android:layout_marginLeft="5dp"
        android:background="@drawable/edit_layout"
        app:layout_constraintStart_toStartOf="@+id/textView7"
        app:layout_constraintTop_toBottomOf="@+id/text_weight" />

    <TextView
        android:id="@+id/text_height"
        android:layout_width="170dp"
        android:layout_height="80dp"
        android:textSize="24dp"
        android:gravity="center"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"
        android:background="@drawable/edit_layout"
        app:layout_constraintEnd_toEndOf="@+id/text_good_type"
        app:layout_constraintTop_toBottomOf="@+id/text_weight" />

    <TextView
        android:id="@+id/text_length"
        android:layout_width="170dp"
        android:layout_height="80dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/edit_layout"
        android:textSize="24dp"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="@+id/text_width"
        app:layout_constraintTop_toBottomOf="@+id/text_width" />

    <TextView
        android:id="@+id/text_quality"
        android:layout_width="170dp"
        android:layout_height="80dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/edit_layout"
        android:textSize="24dp"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="@+id/text_height"
        app:layout_constraintTop_toBottomOf="@+id/text_width" />

    <Button
        android:id="@+id/btn_call_driver"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:background="@drawable/btn_layout"
        android:text="Call driver"
        android:textSize="24dp"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_length" />


</androidx.constraintlayout.widget.ConstraintLayout>